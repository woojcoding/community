<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.portfolio.community.repositories.CategoryMapper">

    <!-- 카테고리 정보들을 조회 -->
    <select id="getCategoryList" resultType="CategoryDto">
        SELECT category_id,
               name
        FROM category c
        JOIN board_info bi
            ON bi.board_info_id = c.board_info_id
        WHERE bi.type = #{type}
    </select>
</mapper>
