<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.portfolio.community.repositories.FileMapper">
    <!-- 게시글Id에 해당하는 파일 목록 조회 -->
    <select id="getFileList" resultType="FileDto">
        SELECT
            file_id,
            original_name,
            thumbnail_name
        FROM file
        WHERE board_id = #{boardId}
    </select>

    <!-- 게시글Id에 해당하는 파일 조회 -->
    <select id="getFile" resultType="FileDto">
        SELECT
            original_name,
            saved_name,
            thumbnail_name
        FROM file
        WHERE file_id = #{fileId}
    </select>

    <!-- 파일을 db에 저장 -->
    <insert id="postFile">
        INSERT INTO file(
                         original_name,
                         saved_name,
                         board_id,
                         thumbnail_name
                         )
        VALUES (
                #{originalName},
                #{savedName},
                #{boardId},
                #{thumbnailName}
                )
    </insert>

    <!-- 파일 Id에 해당하는 파일 삭제 -->
    <delete id="deleteFile">
        DELETE
        FROM file
        WHERE file_id = #{fileId}
    </delete>
</mapper>
